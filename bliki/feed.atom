---
title:     "Kjell-Magne Øierud's Bliki"
subtitle:  Thoughts on software development
site:      oierud.name/~kjellm
author:    Kjell-Magne Øierud
email:     NA
dirty:     true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title><%= h(@item[:title]) %></title>
  <subtitle><%= h(@item[:subtitle]) %></subtitle>
  <link href="http://<%= @item[:site] %>/bliki/" rel="self" />
  <link href="http://<%= @item[:site] %>/" />
  <updated><%= Time.now.xmlschema %></updated>
  <author>
    <name><%= h(@item[:author]) %></name>
    <email><%= h(@item[:email]) %></email>
  </author>
  <id>http://<%= @item[:site] %>/</id>
  <% @site.sorted_articles.each do |post| %>
  <entry>
    <title><%= h(post[:title].split(" :: ").last) %></title>
    <link href="<%= post.path %>" />
    <id>tag:<%= @item[:site] %>,<%= post[:created_at].strftime('%Y-%m-%d') %>:<%= post[:created_at].to_i %></id>
    <updated><%= post[:created_at].xmlschema %></updated>
    <content type="html"><%= h(post.compiled_content.sub(/<div class=.date.>.*?<\/div>/m, '').sub!(/<h2(.*?)<\/h2>/m, '')) %></content>
  </entry>
  <% end %>
</feed>
